<Window x:Class="LayUp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayUp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="SingleBorderWindow"
        xmlns:Common="clr-namespace:LayUp.Common"
        DataContext="{Binding Main,Source={StaticResource Locator}}"
        >
    <Window.Resources>
        <Common:IntToBoolConverter x:Key="IntToBoolConverter"/>
    </Window.Resources>
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="74,255,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"  Text="{Binding LayupPLC.Input000}"/>
        <CheckBox IsChecked="{Binding Path=LayupPLC.Input000, Converter={StaticResource IntToBoolConverter}}" Content="X000" Margin="75,25,653.6,357"></CheckBox>
        <Button Content="dianji" Margin="108,65,578.6,309" Command="{Binding ConnectCommand}"></Button>
    </Grid>
</Window>
